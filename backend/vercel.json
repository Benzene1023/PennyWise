{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.js",  // Includes all JS files under the 'backend' folder
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/app.js",  // Points to the 'app.js' in the 'backend' folder
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    }
  ]
}
