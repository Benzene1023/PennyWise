{
    "version": 2,
    "builds": [
      {
        "src": "src/**/*.js",  // Adjusted to point to files in the 'src' folder
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/app.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
            "Access-Control-Allow-Origin": "*" 
        }
      }
    ]
}
