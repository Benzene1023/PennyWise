{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/app.js", // Adjust this if your app.js is under the 'api' folder
        "methods": ["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
      }
    ]
}
